extends layout
block content
    h1 Set timezone
    p Welcome to #{title}

    form
        label(for='timezone') Set Time Zone via post request
        input(type='number' class='form-control' id='timezone' placeholder='Enter new timezone')
        button(type='submit' class='btn btn-default' id='btn') submit


    script(type='text/javascript').
        $("#btn").on('click', function() {
            var data = $("#timezone").val();
            $.ajax({
                type: "POST",
                url: "/api/time",
                dataType: 'json',
                data : {
                    'timezone' : data
                }
            });
        });